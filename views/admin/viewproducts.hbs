
<section>
    <div class="container mt-3">
        <div class="row mb-3">
            <a href="admin/addProduct" class="btn btn-success ml-auto">Add a product</a>
        </div>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{incremented @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.Category}}</td>
                <td>{{this.Description}}</td>   
                <td> <img src="/Productimages/{{this._id}}.jpg" alt="image" style="width:50px;height:50px"></td>
            </tr>
           {{/each}}
        </tbody>
    </table>
    </div>
</section>
