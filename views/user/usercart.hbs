<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{{#if products}}

<section style="background-color:rgba(112, 177, 112, 0.658)">
    <div class="container mt">
        <h1>CART<i class="fa fa-shopping-cart" aria-hidden="true"></i></h1>
        <div class="row">
            <table class="table table-hover">
        <thead class="table" style="background-color: rgb(82, 114, 88)">
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td> <img src="/Productimages/{{this.item}}.jpg" alt="image" style="width:50px;height:50px"></td>
                <td>{{this.product.name}}</td>
                <td>{{this.product.Price}}</td>
                <td>
                     <button class="btn btn-primary mr-3" onclick="changeCart('{{this.item}}','{{this._id}}','-1')">-</button> 
                      <span id="{{this.product._id}}">{{this.quantity}}</span>
                       <button class="btn btn-primary ml-3" onclick="changeCart('{{this.item}}','{{this._id}}', 1)">+</button>
                </td>
                <td>
                     <button class="btn btn-danger" onclick="removeCart('{{this.item}}','{{this._id}}')">Delete</button>
                </td>
            </tr>
           {{/each}}
        </tbody>
    </table>
        </div>
        <hr>
        <div class="mt-5">
            <h3 class="float-right mr-5">TOTAL:$<span id="totalprice">{{cartTotal}}</span></h3>
        </div><br>
        <div class="mt-4">
            <a href="/placeorder" class="float-right btn btn-success mr-5">Place Order</a>
        </div>
        
    </div>    
</section>
{{else}}
<h1>CART IS EMPTY</h1>
{{/if}}


