<section>
    <div class="container mt-5">
        <div class="row">
            <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Address</th>
                <th scope="col">Total Cost</th>
                <th scope="col">Order Status</th>
                <th scope="col">Date &#38; Time</th>
            </tr>
        </thead>
        <tbody>
            {{#each OrderDetails}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.deliveryDetails.Address}}</td>
                <td>{{this.total}}</td>
                <td>{{this.status}}</td>
                <td>{{this.date}}</td>
                <td>
                    <a class="btn btn-success" href="/moreDetails/{{this._id}}">
                        View More Details
                    </a>
                </td>
               </tr>
            {{/each}}
         </tbody>
     </table>
  </div>  
</section>

